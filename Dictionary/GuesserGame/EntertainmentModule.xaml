<Window x:Class="GuesserGame.EntertainmentModule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Window" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFCF8181" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlockDescription" TextWrapping="Wrap" Margin="278,175,290,161" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" RenderTransformOrigin="0.52,1.031" TextAlignment="Center" />
        <Image x:Name="imageControl" Margin="280,98,306,182" />
        <Button x:Name="nextButton" Content="Next" Click="NextButton_Click" Margin="332,301,358,89" RenderTransformOrigin="4.09,4.378" />
        <TextBox x:Name="wordInputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="278,278,0,0"  Width="218" Background="#FF9C8989" TextAlignment="Center"/>
    </Grid>
</Window>