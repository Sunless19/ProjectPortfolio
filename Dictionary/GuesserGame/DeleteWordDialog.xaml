<Window x:Class="GuesserGame.DeleteWordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Word" Height="150" Width="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FFCF8181" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Introduceți cuvântul de șters:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <ComboBox x:Name="wordToDeleteComboBox" HorizontalAlignment="Left" IsEditable="True" VerticalAlignment="Top" Width="200" Margin="10,30,0,0"/>
        <Button Content="Șterge" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,70,0,0" Click="DeleteButton_Click"/>
        <Button Content="Anulează" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="135,70,0,0" Click="CancelButton_Click"/>
    </Grid>
</Window>